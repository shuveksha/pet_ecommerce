    <link href="assets/css/login.css" rel="stylesheet">


    <title>purr-fect pet products</title>
   
  </head>
  <body>
    <section class="Form my-4 mx-5">
        <div class="container">
            <div class="row no-gutters">
                <div class="col-lg-5 center">
                      <img src="assets/img/p.png" class="img-fluid mx-auto  d-block my-auto" alt="">
                </div>
                      <div class="col-lg-7 px-3 pt-5">
                        
                        <h3 class="color"> Sign into your Account</h3>
                        <form  action="/login" method="post">
                            <div class="form-row">
                                <div class="col-lg-7">
                                    <input type="email" name="email" placeholder="Email-Address"class="form-control my-3 p-3">
                                    </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="col-lg-7">
                                            <input type="password" name="password" placeholder="******"class="form-control">
                                        </div>
                                         </div>
                                         <div class="form-row">
                                            <div class="col-lg-7">
                                                <button type="submit" class="btn1 mt-3 mb-5"> Login</button>
                                        </div>
                                         </div>
                                         <% if(typeof message!= "undefined" && message) { %>
                                          <p class="alert alert-danger mt-4"><%=message %> </p>
                                          <% } %> 
                                         <a href="/forget-password" class="link">Forgot password</a> 
                                         <p>Don't have an account? <a href="/signup" class="link"> Register here</a></p>

                                         <p>Return to Home <a href="/" class="link">Home</a></p>
                        </form>
                    </div>
                </div>
              </div>
    </section>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.js" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
