<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="assets/css/adminstyles.css" />
    <title>Fish</title>
</head>

<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-white" id="sidebar-wrapper">
            <div class="sidebar-heading text-center py-4 primary-text fs-4 fw-bold text-uppercase border-bottom"><a
                    href="/orderdashboard"><img src="assets/img/logo.png" </a> </div> <div
                        class="list-group list-group-flush my-3">
                    <a href="/orderdashboard"
                        class="list-group-item list-group-item-action bg-transparent second-text  fw-bold">Orders</a>
                    <a href="/dogview"
                        class="list-group-item list-group-item-action bg-transparent second-text fw-bold">Dogs</a>
                    <a href="/catview"
                        class="list-group-item list-group-item-action bg-transparent second-text fw-bold">Cats</a>
                    <a href="/fishview"
                        class="list-group-item list-group-item-action bg-transparent second-text fw-bold active">Fish</a>
                    <a href="/addproducts"
                        class="list-group-item list-group-item-action bg-transparent second-text fw-bold">Add</a>
                        <a href=/completedorders class="list-group-item list-group-item-action bg-transparent second-text fw-bold">Completed orders</a>     

            </div>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-transparent py-4 px-4">
                <div class="d-flex align-items-center">
                    <i class="fas fa-align-left primary-text fs-4 me-3" id="menu-toggle"></i>
                    <h2 class="fs-2 m-0">Fish Products</h2>
                </div>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle second-text fw-bold" href="#" id="navbarDropdown"
                                role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user me-2"></i>Admin
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">

                                <li><a class="dropdown-item" href=/logout>Logout </a> </li> </ul> </li> </ul> </div>
                                        </nav> <div class="container-fluid px-4">
                                        <div class="row g-3 my-2">
                                            <div class="col-md-3">


                                            </div>



                                        </div>

                                        <div class="row my-5">
                                            <h3 class="fs-4 mb-3">Product items</h3>
                                            <div class="col">
                                                <table class="table bg-white rounded shadow-sm  table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col" width="50">#</th>
                                                            <th scope="col">Product Name</th>
                                                            <th scope="col">price</th>
                                                            <th scope="col">Detail</th>

                                                            <th scope="col">Update</th>
                                                            <th scope="col">Delete</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% result.forEach(function(result){%>
                                                        <tr>
                                                            <th scope="row"><%= result.pid %></th>
                                                            <td><%= result.pname %></td>

                                                            <td><%= result.pprice %></td>

                                                            <td><a class="btn btn-outline-success m-3"
                                                                    href="/productdetails/<%= result.pid %>" role="
                                                                    button">View details</a>

                                                            <td><a class="btn btn-outline-success m-3"
                                                                    href="/updateproducts/<%= result.pid %>" role="button">Update</a>
                                                            <td><a class="btn btn-outline-success m-3" href="/deleteproducts/<%= result.pid %>"
                                                                    role="button">Delete</a
                                                            </td>
                                                        </tr>
                                                        <%}); %>








                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>

                </div>
        </div>
    </div>
    <!-- /#page-content-wrapper -->

    
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        var el = document.getElementById("wrapper");
        var toggleButton = document.getElementById("menu-toggle");

        toggleButton.onclick = function () {
            el.classList.toggle("toggled");
        };
    </script>
</body>

</html>