  <title>addtocart!</title>
  <style>
    .marginn{
      margin-top: 100px;
    }
  </style>
</head>

<body>


  <header id="header" class="fixed-top d-flex align-items-center">
    <div class="container">
        <div class="header-container d-flex align-items-center justify-content-between">
            <a href="/">
                <div class="logo">
                
                </div>
            </a>

            <nav id="navbar" class="navbar">
                <ul>
                    <li><a class="nav-link " href="/">Home</a></li>
                    <li><a class="nav-link active" href="/catproducts">Catitems</a></li>
                    <li><a class="nav-link  " href="/dogproducts">Dogitems</a></li>
                    <li><a class="nav-link" href="/fishproducts">Fishitems</a></li>

              

                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

        </div><!-- End Header Container -->
    </div>

</header>


  <!-- <navbar closes -->
  <div class="container marginn">
    <div class="card">
      <div class=" h3 card-header fs-4 ">
        Add to Cart
      </div>
      <div class="card-body">

        <form method="post" action="/add/cart ">

          <div class="row mb-3">
            <label class="fs-5 " for="inlineFormInputGroupUsername"> <span class="font-weight-bold">Name</span>:
              <%=product.pname %> </label>

          </div>

          <input type="hidden" name="productId" value="<%=product.pid%>">

          <div class="row mb-3">
            <label class="fs-5" for=""><span class="font-weight-bold">RS:</span> <span id="productPrice">
                <%=product.pprice %> <span></label>

          </div>

          <div class="row mb-3 ">
            <label class="fs-5" for=""><span class="font-weight-bold">Quantity:&nbsp;&nbsp;</span></label>

            <input class="form-control " onkeyup="calculateTotal()" id="productQuantity" style="max-width: 40%;"
              type="number" name="quantity" value="1" id="inlineFormCheck">
          </div>

          <!-- <div class="col-12"> -->

           

            <button type="submit" class="btn btn-primary">Add</button>
           
         
          </form>

          <!-- <div class="col-12"> -->
          <label class="fs-5">

            <span >Your total is Rs&nbsp;</span> <span id="total" class="font-weight-bold"></span>
          </label>

    </div>
  </div>
  </div>
  </div>
  <script>
    function calculateTotal() {
      let totalPlaceholder = document.getElementById('total');
      let price = document.getElementById('productPrice').innerText;
      let quantity = document.getElementById('productQuantity').value;
      console.log(price, quantity);
      totalPlaceholder.innerText = Number.parseInt(price) * Number.parseInt(quantity);
    }
    calculateTotal();
  </script>















